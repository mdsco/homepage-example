section.articles
  .flex.flex--center

    .col-50
      .desc-wrap
        .article-wrap
          |{% for post in site.posts limit: 12 %}
          a(href="{{post.url}}" style="background-image: url(/assets/img/posts/thumbnails/{{post.thumbnail}});").article-thumb
            .article-meta
              .name {{post.title}}
              .date {{post.date | date: "%a %b %d, %Y"}}
          |{% endfor %}

    .col-50.flex.flex--center.order-first
      .col-1
        .desc-wrap
          p.home-lead.outdented ...Developing Wordpress Sites...
          a(href="#").home-cta Check out Play Store
